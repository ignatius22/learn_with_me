<% content_for :title, @course.title %>

<div class="min-h-screen bg-gray-50">
  <!-- Course Header -->
  <div class="bg-gradient-to-br from-blue-600 to-purple-700 text-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
      <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
        <!-- Course Info -->
        <div class="lg:col-span-2">
          <div class="mb-4">
            <%= link_to "← Back to Courses", courses_path, class: "text-blue-200 hover:text-white transition-colors" %>
          </div>
          
          <h1 class="text-4xl font-bold mb-4"><%= @course.title %></h1>
          
          <p class="text-xl text-blue-100 mb-6">
            <%= @course.description %>
          </p>
          
          <!-- Course Meta -->
          <div class="flex flex-wrap items-center gap-6 text-blue-100">
            <div class="flex items-center space-x-2">
              <div class="w-10 h-10 bg-white bg-opacity-20 rounded-full flex items-center justify-center">
                <span class="text-white font-semibold">
                  <%= @course.author.first_name[0] %><%= @course.author.last_name[0] %>
                </span>
              </div>
              <div>
                <div class="font-medium text-white">
                  <%= @course.author.first_name %> <%= @course.author.last_name %>
                </div>
                <div class="text-sm">Instructor</div>
              </div>
            </div>
            
            <div class="flex items-center space-x-1">
              <svg class="w-5 h-5 text-yellow-300" fill="currentColor" viewBox="0 0 20 20">
                <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"></path>
              </svg>
              <span class="font-medium">4.8 (124 reviews)</span>
            </div>
            
            <div class="flex items-center space-x-2">
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197m13.5-9a2.5 2.5 0 11-5 0 2.5 2.5 0 015 0z"></path>
              </svg>
              <span><%= @course.enrollments.count %> students enrolled</span>
            </div>
          </div>
        </div>
        
        <!-- Course Sidebar -->
        <div class="lg:col-span-1">
          <div class="card bg-white text-gray-900">
            <div class="p-6">
              <!-- Course Image Placeholder -->
              <div class="w-full h-48 bg-gradient-to-br from-blue-100 to-purple-100 rounded-lg mb-6 flex items-center justify-center">
                <svg class="w-16 h-16 text-blue-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.746 0 3.332.477 4.5 1.253v13C19.832 18.477 18.246 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"></path>
                </svg>
              </div>
              
              <div class="text-center mb-6">
                <div class="text-3xl font-bold text-blue-600 mb-2">$<%= @course.price %></div>
                <div class="text-gray-600">One-time purchase</div>
              </div>
              
              <!-- Enrollment Status -->
              <div id="course_<%= @course.id %>_enrollment" class="mb-6">
                <% if user_signed_in? && current_student %>
                  <%= render "enrollment_status", course: @course, enrollment: @enrollment %>
                <% else %>
                  <div class="text-center">
                    <%= link_to "Sign up to Enroll", new_user_registration_path, 
                          class: "btn btn-primary w-full" %>
                  </div>
                <% end %>
              </div>
              
              <!-- Course Features -->
              <div class="space-y-3 text-sm">
                <div class="flex items-center space-x-3">
                  <svg class="w-5 h-5 text-green-500" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
                  </svg>
                  <span>Lifetime access</span>
                </div>
                <div class="flex items-center space-x-3">
                  <svg class="w-5 h-5 text-green-500" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
                  </svg>
                  <span>Mobile and desktop access</span>
                </div>
                <div class="flex items-center space-x-3">
                  <svg class="w-5 h-5 text-green-500" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
                  </svg>
                  <span>Certificate of completion</span>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  
  <!-- Course Content -->
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
      <!-- Main Content -->
      <div class="lg:col-span-2 space-y-8">
        <!-- What You'll Learn -->
        <div class="card">
          <div class="p-6">
            <h2 class="text-2xl font-bold text-gray-900 mb-4">What you'll learn</h2>
            <div class="grid grid-cols-1 md:grid-cols-2 gap-3">
              <% 6.times do |i| %>
                <div class="flex items-start space-x-3">
                  <svg class="w-5 h-5 text-green-500 mt-0.5" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
                  </svg>
                  <span class="text-gray-700">Master key concepts and practical skills</span>
                </div>
              <% end %>
            </div>
          </div>
        </div>
        
        <!-- Course Content -->
        <% if @sections.any? %>
          <div class="card">
            <div class="p-6">
              <h2 class="text-2xl font-bold text-gray-900 mb-6">Course content</h2>
              <div class="space-y-4">
                <% @sections.each_with_index do |section, index| %>
                  <div class="border border-gray-200 rounded-lg">
                    <div class="p-4 bg-gray-50 border-b border-gray-200">
                      <h3 class="font-semibold text-gray-900">
                        Section <%= index + 1 %>: <%= section.title %>
                      </h3>
                      <p class="text-sm text-gray-600 mt-1">
                        <%= pluralize(section.lessons.count, 'lesson') %>
                      </p>
                    </div>
                    <% if section.lessons.any? %>
                      <div class="p-4">
                        <% section.lessons.each do |lesson| %>
                          <div class="flex items-center justify-between py-2">
                            <div class="flex items-center space-x-3">
                              <svg class="w-4 h-4 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14.828 14.828a4 4 0 01-5.656 0M9 10h1m4 0h1m-6 4h1m4 0h1m6-8V6a2 2 0 00-2-2H6a2 2 0 00-2 2v2M5 10h14M5 10V8a2 2 0 012-2h10a2 2 0 012 2v2M5 10v10a2 2 0 002 2h10a2 2 0 002 2V10"></path>
                              </svg>
                              <span class="text-gray-700"><%= lesson.title %></span>
                            </div>
                            <span class="text-sm text-gray-500">5 min</span>
                          </div>
                        <% end %>
                      </div>
                    <% end %>
                  </div>
                <% end %>
              </div>
            </div>
          </div>
        <% end %>
        
        <!-- Requirements -->
        <div class="card">
          <div class="p-6">
            <h2 class="text-2xl font-bold text-gray-900 mb-4">Requirements</h2>
            <ul class="space-y-2 text-gray-700">
              <li>• No prior experience required</li>
              <li>• A computer with internet access</li>
              <li>• Willingness to learn and practice</li>
            </ul>
          </div>
        </div>
        
        <!-- Description -->
        <div class="card">
          <div class="p-6">
            <h2 class="text-2xl font-bold text-gray-900 mb-4">Description</h2>
            <div class="prose max-w-none text-gray-700">
              <%= simple_format(@course.description) %>
            </div>
          </div>
        </div>
      </div>
      
      <!-- Sidebar -->
      <div class="lg:col-span-1">
        <!-- Instructor Info -->
        <div class="card mb-6">
          <div class="p-6">
            <h3 class="text-lg font-bold text-gray-900 mb-4">Your Instructor</h3>
            <div class="flex items-center space-x-4 mb-4">
              <div class="w-12 h-12 bg-blue-500 rounded-full flex items-center justify-center">
                <span class="text-white font-semibold">
                  <%= @course.author.first_name[0] %><%= @course.author.last_name[0] %>
                </span>
              </div>
              <div>
                <div class="font-semibold text-gray-900">
                  <%= @course.author.first_name %> <%= @course.author.last_name %>
                </div>
                <div class="text-sm text-gray-600">Instructor</div>
              </div>
            </div>
            <p class="text-gray-700 text-sm">
              Experienced professional with expertise in the field. Passionate about teaching and helping students succeed.
            </p>
          </div>
        </div>
        
        <!-- Course Stats -->
        <div class="card">
          <div class="p-6">
            <h3 class="text-lg font-bold text-gray-900 mb-4">This course includes</h3>
            <div class="space-y-3 text-sm">
              <div class="flex items-center space-x-3">
                <svg class="w-4 h-4 text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                </svg>
                <span><%= @sections.sum { |s| s.lessons.count } %> lessons</span>
              </div>
              <div class="flex items-center space-x-3">
                <svg class="w-4 h-4 text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197m13.5-9a2.5 2.5 0 11-5 0 2.5 2.5 0 015 0z"></path>
                </svg>
                <span><%= @course.enrollments.count %> students</span>
              </div>
              <div class="flex items-center space-x-3">
                <svg class="w-4 h-4 text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                </svg>
                <span>Certificate of completion</span>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

