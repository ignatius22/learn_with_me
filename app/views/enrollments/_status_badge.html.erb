<% 
  case enrollment.status
  when 'enrolled'
    status_class = 'bg-blue-100 text-blue-800'
    status_text = 'Enrolled'
    icon_path = 'M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.746 0 3.332.477 4.5 1.253v13C19.832 18.477 18.246 18 16.5 18c-1.746 0-3.332.477-4.5 1.253'
  when 'completed'
    status_class = 'bg-green-100 text-green-800'
    status_text = 'Completed'
    icon_path = 'M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z'
  when 'dropped'
    status_class = 'bg-red-100 text-red-800'
    status_text = 'Dropped'
    icon_path = 'M10 14l2-2m0 0l2-2m-2 2l-2-2m2 2l2 2m7-2a9 9 0 11-18 0 9 9 0 0118 0z'
  else
    status_class = 'bg-gray-100 text-gray-800'
    status_text = enrollment.status.humanize
    icon_path = 'M8.228 9c.549-1.165 2.03-2 3.772-2 2.21 0 4 1.343 4 3 0 1.4-1.278 2.575-3.006 2.907-.542.104-.994.54-.994 1.093m0 3h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z'
  end
%>

<div class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium <%= status_class %>">
  <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="<%= icon_path %>"></path>
  </svg>
  <%= status_text %>
</div>

